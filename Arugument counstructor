class Main {

    int id;
    String name;
    float salary;

    public Main(int ide,String nam,Float sal){    //counstructor created using Aruguments
        System.out.println("Arugument counstructor");
        id=ide;
        name=nam;
        salary=sal;
        
    }
    public void display(){      //display method is creat to display the values

        System.out.println("id is:"+id);
        System.out.println("name is:"+name);
        System.out.println("Salay is:"+salary);
    }

    public static void main(String[] args) {

        Main m=new Main(10,"srinu",200000f); //given aruguments
        m.display(); 
       
    }
}
